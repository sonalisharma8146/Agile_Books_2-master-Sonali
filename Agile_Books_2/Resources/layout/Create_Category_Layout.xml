<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">
  

    <TextView
        android:text="BOOK CATEGORY"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView1"
        android:gravity="center_horizontal" />
    
    <TextView
        android:text="ID"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_v_category_id"
        android:gravity="center_horizontal"  android:visibility="invisible"/>
    

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_category"
        android:hint="BOOK CATEGORY" />

      <Button
        android:text="SAVE BOOK CATEGORY"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_save_category" />
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_show" android:minHeight="10dp" />
    
    <Button
        android:text="DELETE BOOK CATEGORY"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_delete_category" />

     <Button
        android:text="UPDATE BOOK CATEGORY"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_update_category" />

    <Button
        android:text="NEW BOOK"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_new_category" />

</LinearLayout>
</RelativeLayout>